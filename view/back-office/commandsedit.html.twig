{% extends "base.html.twig" %}

{% block title %}Editer une commande
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Editer une commande</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">

						<div class="form-group form-default form-static-label">
							<label for="category">
								Categorie de la commande</label>
							<select name="category" class="form-control fill">
								<option value="0">Fun</option>
								<option value="1">Test</option>
							</select>
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="command">
								Commande</label>
							<input type="text" name="command" class="form-control" placeholder="!test">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="content">
								Ce que fait la commande ?</label>
							<input type="text" name="content" class="form-control" placeholder="ceci est un test de commande cool qui tue et qui est super genial oulalal un truc de ouff.">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="cost">
								Prix de la commande</label>
							<input type="number" name="cost" class="form-control">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="maintenance">
								Activ√© ?</label>
							<select name="select" class="form-control fill">
								<option value="1">Oui</option>
								<option value="0">Non</option>
							</select>
							<span class="form-bar"></span>
						</div>

						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Editer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}
