{% extends "base.html.twig" %}

{% block title %}Gestion Page Donation
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Gestion Page Donation</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">

						<div class="form-group form-default form-static-label">
							<label for="title">
								Titre</label>
							<input type="text" name="title" class="form-control" placeholder="Titre de la page">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<textarea name="content" id="content" style="min-height: 400px;"></textarea>
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="paypal">
								Lien don paypal</label>
							<input type="text" name="paypal" class="form-control" placeholder="https://">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="streamlab">
								Lien don streamlab</label>
							<input type="text" name="streamlab" class="form-control" placeholder="https://">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="block_active">
								Module Activ√©</label>
							<select name="select" class="form-control fill">
								<option value="1">Oui</option>
								<option value="0">Non</option>
							</select>
							<span class="form-bar"></span>
						</div>
						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Enregistrer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}

{% block javascript %}
	<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

	<script>
		CKEDITOR.replace('content');
	</script>


{% endblock %}
