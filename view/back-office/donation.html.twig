{% extends "base.html.twig" %}

{% block title %}Gestion Page Donation
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Gestion Page Donation</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">

						<div class="form-group form-default form-static-label">
							<label for="title">
								Titre</label>
							<input type="text" name="title" class="form-control" placeholder="Titre de la page" value="{{donation.title}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<textarea name="content" id="content" style="min-height: 400px;">{{donation.content|raw}}</textarea>
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="paypal">
								Lien don paypal</label>
							<input type="text" name="paypal" class="form-control" placeholder="https://" value="{{donation.linkdonationpaypal}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="streamlab">
								Lien don streamlab</label>
							<input type="text" name="streamlab" class="form-control" placeholder="https://" value="{{donation.linkdonationstreamlab}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="actived">
								Module Activé</label>
							<select name="actived" class="form-control fill">
								<option value="1" {% if donation.actived == 1 %} selected {% endif %}>Oui</option>
								<option value="0" {% if donation.actived == 0 %} selected {% endif %}>Non</option>
							</select>
							<span class="form-bar"></span>
						</div>
						{% if get.error == 1 %}
							<p class="text-center" style="color:red">Les champs ne peuvent pas être null</p>
						{% endif %}

						{% if get.success == 1 %}
							<p class="text-center" style="color:green">Modification enregistrer</p>
						{% endif %}

						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Enregistrer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}

{% block javascript %}
	<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

	<script>
		CKEDITOR.replace('content');
	</script>


{% endblock %}
