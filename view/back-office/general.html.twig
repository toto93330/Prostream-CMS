{% extends "base.html.twig" %}

{% block title %}Gestion General du site
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Gestion General du site</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">

						<div class="form-group form-default form-static-label">
							<label for="title">
								Titre du site</label>
							<input type="text" name="title" class="form-control" placeholder="Enter User Name">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="description">
								Description du site</label>
							<input type="text" name="description" class="form-control" placeholder="Enter User Name">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="email">
								Email de contact de l'administrateur</label>
							<input type="text" name="email" class="form-control" placeholder="Enter User Name">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="logo">
								Logo du site</label>
							<input type="file" name="logo" class="form-control" placeholder="Enter User Name">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="maintenance">
								Site en maintenance ?</label>
							<select name="select" class="form-control fill">
								<option value="0">Non</option>
								<option value="1">Oui</option>
							</select>
							<span class="form-bar"></span>
						</div>

						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Enregistrer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}
