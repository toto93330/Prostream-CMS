{% extends "base.html.twig" %}

{% block title %}Editer lien social
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Editer lien social</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="POST" style="min-width: 400px;">
						<div class="form-group form-default form-static-label">
							<label for="name">Label de l'icon</label>
							<input type="text" name="name" class="form-control" placeholder="discord">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="icon">Icon FontAwesome</label>
							<input type="text" name="icon" class="form-control" placeholder="<i class='fab fa-discord'></i>">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="link">Lien</label>
							<input type="text" name="link" class="form-control" placeholder="https://">
							<span class="form-bar"></span>
						</div>

						<center>
							<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
								Ajouter</button>
						</center>

					</form>

				</div>

			</div>
		</div>
	</div>


{% endblock %}
