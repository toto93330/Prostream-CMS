{% extends "base.html.twig" %}

{% block title %}Editer un evenement
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Editer un evenement du calendrier</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;" enctype="multipart/form-data">

						<div class="form-group form-default form-static-label">
							<label for="day">
								Jour du stream</label>
							<select name="day" class="form-control fill">
								{% for day in days %}
									<option value="{{day.id}}" {% if calendar.dayID.id == day.id %} selected {% endif %}>{{day.name}}</option>
								{% endfor %}
							</select>
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="start">
								Heure de debut</label>
							<input type="time" name="start" class="form-control" value="{{calendar.starteventat}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="end">
								Heure de fin</label>
							<input type="time" name="end" class="form-control" value="{{calendar.endeventat}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="title">
								Titre du live</label>
							<input type="text" name="title" class="form-control" placeholder="Votre titre" value="{{calendar.name}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="image">
								Image de evenement</label>
							<input type="file" name="image" class="form-control" placeholder="Enter User Name">
							<span class="form-bar"></span>
							<br>
							<center><img src="{{calendar.image}}" alt="image" style="max-height:50px"></center>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="fullday">
								toute la journée ??</label>
							<select name="fullday" class="form-control fill">
								<option value="0" {% if calendar.isfullday == 0 %} selected {% endif %}>Non</option>
								<option value="1" {% if calendar.isfullday == 1 %} selected {% endif %}>Oui</option>
							</select>
							<span class="form-bar"></span>
						</div>

						<div class="form-group form-default form-static-label">
							<label for="actived">
								Activé ??</label>
							<select name="actived" class="form-control fill">
								<option value="1" {% if calendar.actived == 1 %} selected {% endif %}>Oui</option>
								<option value="0" {% if calendar.actived == 0 %} selected {% endif %}>Non</option>
							</select>
							<span class="form-bar"></span>
						</div>

						{% if get.success == 1 %}
							<p class="text-center" style="color:green">Evenement Modifier</p>
						{% endif %}

						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Editer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}
