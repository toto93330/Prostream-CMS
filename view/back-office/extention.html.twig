{% extends "base.html.twig" %}

{% block title %}Gestion Page Extension
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Gestion Page Extension</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">

						<div class="form-group form-default form-static-label">
							<label for="title">
								Titre</label>
							<input type="text" name="title" class="form-control" placeholder="Titre de la page" value="{{extention.title}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<textarea name="content" id="content" style="min-height: 400px;">{{extention.content|raw}}</textarea>
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="firefox">
								Lien addon Firefox</label>
							<input type="text" name="firefox" class="form-control" placeholder="https://" value="{{extention.linkextensionfirefox}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="chrome">
								Lien addon Chrome</label>
							<input type="text" name="chrome" class="form-control" placeholder="https://" value="{{extention.linkextensionchrome}}">
							<span class="form-bar"></span>
						</div>
						<div class="form-group form-default form-static-label">
							<label for="block_active">
								Module Activ√©</label>
							<select name="actived" class="form-control fill">
								{% if extention.actived == 1 %}
									<option value="1" selected>Oui</option>
									<option value="0">Non</option>
								{% else %}
									<option value="1">Oui</option>
									<option value="0" selected>Non</option>
								{% endif %}
							</select>
							<span class="form-bar"></span>
						</div>
						{% if get.error == 1 %}
							<p class="text-center" style="color:red">vous devez remplir tous les champ</p>
						{% endif %}

						{% if get.success == 1 %}
							<p class="text-center" style="color:green">Modification enregistrer</p>
						{% endif %}
						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Enregistrer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}

{% block javascript %}
	<script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>

	<script>
		CKEDITOR.replace('content');
	</script>


{% endblock %}
