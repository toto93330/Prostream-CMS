{% extends "base.html.twig" %}

{% block title %}Editer une categorie
{% endblock %}


{% block content %}

	<div class="card">
		<div class="card-header">
			<h5>Editer une categorie</h5>
		</div>
		<div class="card-block">
			<div class="row">

				<div class="col-sm-12">

					<form action="#" method="post" style="min-width: 400px;">


						<div class="form-group form-default form-static-label">
							<label for="name">
								Titre de la categorie</label>
							<input type="text" name="name" class="form-control" value="{{edit.name}}">
							<span class="form-bar"></span>
						</div>
						{% if get.success == 1 %}

							<p class="text-center" style="color:green">Nom De La Categorie Modifier</p>

						{% endif %}
						<button class="btn waves-effect waves-light btn-primary btn-outline-primary">
							Editer</button>
					</form>

				</div>


			</div>
		</div>
	</div>


{% endblock %}
